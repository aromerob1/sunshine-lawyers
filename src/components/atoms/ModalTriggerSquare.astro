---
import { Image } from 'astro:assets';
const { color, text } = Astro.props;
---

<div
  class=`relative flex flex-col items-center justify-center text-center w-full h-[12.7rem] ${color} text-white font-poppins p-2`
>
  <h3 class="text-h3 font-bold-poppins">{text}</h3>
  <Image
    src="/assets/icons/Cancel.svg"
    alt="More information icon"
    width={49.5}
    height={49.5}
    class="absolute bottom-4 right-4"
  />
</div>
